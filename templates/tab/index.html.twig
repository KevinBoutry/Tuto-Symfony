{% extends "template.html.twig" %}

{% block title %}
    Table
{% endblock %}

{% block PageTitle %}
    Table
{% endblock %}

{% block body %}
    <table class="table">
        {% for note in notes %}
        <tr>
            <td> {{note}} </td>
        </tr>
        {% endfor %}
    </table>

    <div class="alert alert-info">
        <p>Nombre de notes : {{notes | length}}</p>
        <p>Note maximum : {{ max(notes)}}</p>
        <p>Note minimum : {{ min(notes) }}</p>
    </div>
{% endblock %}
